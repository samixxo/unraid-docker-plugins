<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
    <Name>xbvr</Name>
    <Category>Cloud:</Category>
    <Icon>https://raw.githubusercontent.com/samixxo/unraid-docker-plugins/master/plugin/icon/xbvr.png</Icon>
    <Overview>The ultimate tool for managing your VR **** library.</Overview>
    <GitHub>https://github.com/xbapps/xbvr</GitHub>
    <Registry>https://hub.docker.com/r/xbapps/xbvr</Registry>
    <Repository>xbapps/xbvr:0.3.0-beta.12</Repository>
    <Privileged>false</Privileged>
    <BindTime>true</BindTime>
    <WebUI>http://[IP]:[PORT:17080]</WebUI>
    <Network Default="bridge">bridge</Network>
    <Config Required="true" Type="Port" Name="Frontend Port"
            Target="9999" Default="17080" Mode="tcp" Display="always-hide"
            Description="Port used to access the web interface of the application"/>
    <Config Required="true" Type="Variable" Name="Username"
            Target="UI_USERNAME" Default="" Display="always-hide"
            Description="Username used to access the web interface"/>
    <Config Required="true" Type="Variable" Name="Password" Mask="true"
            Target="UI_PASSWORD" Default="" Display="always-hide"
            Description="Password used to access the web interface"/>
    <Config Required="true" Type="Variable" Name="DeoVR Username"
            Target="DEO_USERNAME" Default="" Display="always-hide"
            Description="Username used to authenticate in deo-vr"/>
    <Config Required="true" Type="Variable" Name="DeoVR Password" Mask="true"
            Target="DEO_PASSWORD" Default="" Display="always-hide"
            Description="Password used to authenticate in deo-vr"/>
    <Config Required="true" Type="Path" Name="Videos Path" 
            Target="/videos" Default="/mnt/user/" Mode="r" Display="always-hide"
            Description="Directory which keeps your videos"/>
    <Config Required="true" Type="Path" Name="Config Storage Path"
            Target="/root/.config/" Default="/mnt/user/appdata/xbvr" Mode="rw" Display="always-hide"
            Description="Directory which keeps configuration data"/>
    <ExtraParams>
        -e 'ENABLE_DLNA'='false'
    </ExtraParams>
</Container>